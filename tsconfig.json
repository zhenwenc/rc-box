{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "jsx": "react",
        "module": "commonjs",
        "noLib": false,
        "removeComments": false,
        "rootDir": ".",
        "target": "es6",
        "outDir": "dist",
        "moduleResolution": "node",
        "noImplicitAny": false
    },
    "filesGlob": [
        "src/**/*.{ts,tsx}",
        "test/**/*.{ts,tsx}",
        "demo/**/*.tsx",
        "typings/browser.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "typings/browser.d.ts",
        "src/components/DataTable.tsx",
        "src/components/index.ts",
        "src/components/TableColumn.tsx",
        "src/index.ts",
        "src/plugins/index.ts",
        "src/plugins/TableFilterPlugin.ts",
        "src/plugins/TableManager.ts",
        "src/renderers/index.ts",
        "src/renderers/MuiTableRenderer.tsx",
        "src/renderers/MuiToolsRenderer.tsx",
        "demo/main.tsx",
        "demo/SampleTable.tsx"
    ]
}
